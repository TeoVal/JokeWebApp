@model IEnumerable<JokesWebApp.Models.KnockKnockJoke>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Joke Name
            </th>
            <th>
                Knock Knock!
            </th>
            <th>
                Who's there?
            </th>
            <th>
                Answer
            </th>
            <th>
                Answer who?
            </th>
            <th>
                Punch Line
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="KnockKnockPlayback" asp-route-id="@item.Id" asp-action="Index">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                Knock Knock!
            </td>
            <td>
                Who's there?
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoIsThereAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoIsThereAnswer) who?
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PunchLine)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
